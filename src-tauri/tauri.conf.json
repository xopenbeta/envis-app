{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Envis",
  "version": "0.3.3",
  "identifier": "com.envis",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/xopenbeta/envis-app/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERBRjkxMkRFQkUwRTU1RkMKUldUOFZRNiszaEw1MnZQdDdwVEVVNlBlWlJSdy8vOTFBaU5UdmF1UmNlc3JsT0IvSmZoeEg2RmMK"
    },
    "cli": {
      "description": "Envis - Environment and Service Management Tool",
      "subcommands": {
        "list": {
          "description": "List all environments"
        },
        "ls": {
          "description": "List all environments"
        },
        "use": {
          "description": "Activate an environment",
          "args": [
            {
              "name": "name",
              "description": "Environment name or ID",
              "index": 1,
              "takesValue": true
            }
          ]
        }
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Envis",
        "width": 800,
        "height": 600,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
